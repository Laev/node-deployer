{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.Iterable",
      "es5",
      "es2015.promise",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "allowJs": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "outDir": "./lib",
    "strict": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["types/index.d.ts", "src/*.ts"],
  "exclude": [
    "bin",
    "node_modules",
    "**/*.spec.ts",
    "**/lib/**",
    "**/static/**",
    "**/config/**"
  ]
}
